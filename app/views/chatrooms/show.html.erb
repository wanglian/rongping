<%- content_for :header do -%>
	<%= 'Session'[] %> - <%= @chatroom.title %>
<%- end -%>

<%- content_for :sidebar do -%>
  <%= render :partial => 'shared/activity' -%>
<%- end -%>

<table class="index">
  <tr>
    <td width="80" class="top"><%= avatar_for @chatroom.user %></td>
    <td class="top">
      <div>
        <%= user_link @chatroom.user %> 创建
        <%= time_ago_in_words @chatroom.created_at %>前
        <%- if @chatroom.user == current_user -%>
          <%= link_to '编辑', edit_chatroom_path(@chatroom) %> |
          <%= link_to_remote '删除', :url => chatroom_path(@chatroom), :method => :delete, :confirm => "You are deleting '{object}'? Are you sure?"[:confirm_alert, @chatroom.title], :success => "Element.remove('chatroom_#{@chatroom.id}')" %>
        <%- end -%>
      </div>

      <div><%= simple_format h(@chatroom.description) %></div>
    </td>
  </tr>
  <tr>
    <td></td>
    <td>
      <b><%= link_to "Join"[], chatroom_chats_path(@chatroom) %></b>
    </td>
  </tr>
</table>