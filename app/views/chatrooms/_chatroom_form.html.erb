<%- form_for(@chatroom) do |f| -%>
  <%= f.error_messages %>

  <p>
    <%= f.label "Title"[] %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label "Description"[] %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label "Privacy"[] %><br />
    <%#= f.select :privacy, Chatroom::PRIVACIES %>
    <%= f.radio_button :privacy, 'Public' %>Public<br/>
    <%= f.radio_button :privacy, 'Protected' %>Protected
  </p>
  <p>
    <%= f.submit @chatroom.new_record? ? "Create"[] : "Update"[] %>
    <%= button_to_function 'Cancel'[], "history.back()" %>
  </p>
<%- end -%>
