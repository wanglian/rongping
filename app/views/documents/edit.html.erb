<% content_for :header do -%>
	<%= 'Edit document'[] %>
<% end -%>

<% form_for(@document) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label "title"[] %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label "description"[] %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit "Update"[] %>
    <%= button_to_function 'Cancel'[], "history.back()" %>
  </p>
<% end %>
