<% content_for :header do -%>
	<%= 'Add new document'[] %>
<% end -%>

<% form_for(@document, :html => { :multipart => true }) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label "Choose a file"[] %><br />
    <%= f.file_field :attachment, :onchange => "$('document_title').value=this.value.substring(this.value.lastIndexOf('/') + 1, (this.value.length));" %>
  </p>
  <p>
    <%= f.label "title"[] %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label "description"[] %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit "Create"[] %>
    <%= button_to_function 'Cancel'[], "history.back()" %>
  </p>
<% end %>

