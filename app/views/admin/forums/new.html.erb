<% content_for :header do -%>
  <%= 'Add new forum'[] %>
<% end -%>

<% content_for :sidebar do -%>

<% end -%>

<% form_for(@forum, :url => admin_forums_path) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit "Create"[] %>
    <%= button_to_function 'Cancel'[], "history.back()" %>
  </p>
<% end %>
