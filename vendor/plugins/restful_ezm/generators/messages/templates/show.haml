%h1 RESTful Easy Messages - haml
= flash[:notice]
= rezm_menu
%p
%fieldset
  %legend View Message
  %p
    %label{ :for => "message_receiver_name" }
      %strong To:
    = rezm_to_user_link(@message)
  %p
    %label{ :for => "message_sender_name" }
      %strong From:
    = rezm_from_user_link(@message)
  %p
    %label{ :for => "message_subject" }
      %strong Subject:
    = h @message.subject
  %p
    %label{ :for => "message_body" }
      %strong Message:
    = simple_format(h(@message.body))
%span= rezm_button_to_reply(@message) + rezm_button_to_delete(@message)